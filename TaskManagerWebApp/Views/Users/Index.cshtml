@model IEnumerable<User>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<dev class="container p-3">
    <dev class="row pt-4">
        <dev class="col-6">
            <h2 class="text-primary">Items View</h2>
        </dev>
        <dev class="col-6 text-end">
            <a asp-controller="Items" asp-action="New" class="btn btn-primary">
                <i class="bi bi-plus"></i> &nbsp; Add New Item
            </a>
        </dev>
    </dev>
    <dev>
        <table class="table table-bordered table-striped" sytle="width:100%">
            <thead>
                <tr>
                    <th scope="col">
                        Item Name
                    </th>
                    <th scope="col">
                        Item Price
                    </th>
                    <th scope="col">
                        Created At 
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr class="table table-primary">
                        <td scope="row" width="50%">
                            @user.UserName
                        </td>

                        <td scope="row" width="30%">
                            @user.Email
                        </td>
                        <td scope="row" width="30%">
                            @user.CreatedAt
                        </td>
                        <td>
                            <a asp-controller="" asp-action="New">
                                <i class="bi bi-pencil"></i>
                            </a>
                            &nbsp;
                            <a asp-controller="" asp-action="New" class="">
                                <i class="bi bi-trash3"></i>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </dev>
</dev>